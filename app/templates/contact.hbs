<section id="contact">
  <div class="contact-content-box">
    <div>
      <h1 class="contact-title">Contact</h1>
    </div>
    <div>
      <h3 class="contact-message">
        If you are interested in getting <br>
        in touch please fill this form. <br>
        I'm open to all propositions.
      </h3>
    </div>

    <div class="contact-social-media-box">
      <ul class="contact-social-media-list">
        <li>
          <a
            href="https://github.com/EQuimper"
            class="contact-social-media-item"
            target="_blank">
            <i class="icon huge github" />
          </a>
        </li>
        <li>
          <a
          href="https://www.linkedin.com/in/emanuelquimper" class="contact-social-media-item"
          target="_blank">
            <i class="icon huge linkedin" />
          </a>
        </li>
        <li>
          <a
          href="https://twitter.com/QuimperEmanuel"
          class="contact-social-media-item"
          target="_blank">
            <i class="icon huge twitter" />
          </a>
        </li>
      </ul>
    </div>

  </div>
  <div class="contact-form-box">
    <form class="ui form form-contact">
      <div class="field">
        <label style="color: white">Name</label>
        {{input type="text" value=name placeholder="Name" autofocus="autofocus"}}
      </div>
      <br>
      <div class="field">
        <label style="color: white">Email</label>
        {{input type="email" value=emailAddress placeholder="Email"}}
      </div>
      <br>
      <div class="field">
        <label style="color: white">Message</label>
        {{textarea value=message placeholder="Message"}}
      </div>
      {{#if didLoad}}
      <button class="ui secondary loading button">Loading</button>
      {{else}}
      <button
        {{action 'sendMessage'}}
        class="ui massive animated fade black button"
        tabindex="0"
        disabled={{unless isDisabled 'disabled'}}>
        <div class="visible content">Send Message</div>
        <div class="hidden content white">
          <i class="mail forward icon"></i>
        </div>
      </button>
      {{/if}}
    </form>
  </div>
</section>
